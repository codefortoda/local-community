= form_for @<%= singular_table_name %>, html: { class: "form form-horizontal <%= singular_table_name %>" } do |f|
  <%- attributes.each do |column| -%>
  .form-group
    = f.label :<%= column.name %>, class: "control-label col-lg-2"
    .col-lg-10
      = f.<%= column.field_type %> :<%= column.name %>, class: "form-control"
      = f.error_span(:<%= column.name %>)
  <%- end -%>
  .form-group
    .col-lg-offset-2.col-lg-10
      = link_to t("helpers.links.cancel"), <%= index_helper %>_path, class: "btn btn-default"
      = f.submit nil, class: "btn btn-primary"
