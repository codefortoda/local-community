- model_class = Event
.page-header
  = link_to t("helpers.links.back"), events_path, class: "btn btn-default pull-right"
  = link_to t("helpers.links.edit"), edit_event_path(@event), class: "btn btn-default pull-right mr-2"
  = link_to t("helpers.links.destroy"), event_path(@event), method: "delete",
            data: { confirm: t("helpers.links.confirm") }, class: "btn btn-danger pull-right mr-2"
  %h1=t "helpers.titles.show", model: model_class.model_name.human

%table.table.ui.blue.celled
  %tr
    %th.th-label= model_class.human_attribute_name(:group)
    %td= @event.group
  %tr
    %th.th-label= model_class.human_attribute_name(:name)
    %td= @event.name
  %tr
    %th.th-label= model_class.human_attribute_name(:url)
    %td= @event.url
  %tr
    %th.th-label= model_class.human_attribute_name(:place)
    %td= @event.place
  %tr
    %th.th-label= model_class.human_attribute_name(:kaisai_date)
    %td= @event.kaisai_date
  %tr
    %th.th-label= model_class.human_attribute_name(:notices)
    %td= @event.notices
  %tr
    %th.th-label= model_class.human_attribute_name(:announcement)
    %td= @event.announcement
  %tr
    %th.th-label= model_class.human_attribute_name(:price)
    %td= @event.price
  %tr
    %th.th-label= model_class.human_attribute_name(:organizer)
    %td= @event.organizer
  %tr
    %th.th-label= model_class.human_attribute_name(:how_apply)
    %td= @event.how_apply
  %tr
    %th.th-label= model_class.human_attribute_name(:period)
    %td= @event.period
  %tr
    %th.th-label= model_class.human_attribute_name(:contact_name)
    %td= @event.contact_name
  %tr
    %th.th-label= model_class.human_attribute_name(:ontact)
    %td= @event.ontact
  %tr
    %th.th-label= model_class.human_attribute_name(:location)
    %td= @event.location
  %tr
    %th.th-label= model_class.human_attribute_name(:access)
    %td= @event.access
  %tr
    %th.th-label= model_class.human_attribute_name(:parking_lot)
    %td= @event.parking_lot
