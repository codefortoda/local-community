= form_for [:manage, @facility_category], html: { class: "form form-horizontal facility_category" } do |f|
  = render '/validation_message', object: @facility_category
  .form-group
    = f.label :name, class: "control-label col-lg-2"
    .col-lg-10
      = f.text_field :name, class: "form-control"
      = f.error_span(:name)
  .form-group
    .col-lg-offset-2.col-lg-10
      = link_to t("helpers.links.cancel"), manage_facility_categories_path, class: "btn btn-default"
      = f.submit nil, class: "btn btn-primary"
